# Example/default config script for boxbuilder
export boxbuilder_chef_repos="git://github.com/thewoolleyman/boxbuilder_example_main_chef_repo.git git://github.com/thewoolleyman/boxbuilder_example_dependency_chef_repo.git"
export boxbuilder_chef_json_path="$HOME/.chef/boxbuilder_example_main_chef_repo/config/node_default.json"
export boxbuilder_chef_config_path="$HOME/.chef/boxbuilder_example_main_chef_repo/config/solo_default.rb"

# Default values for building AMIs
export boxbuilder_ami_instancetype=m1.large
export boxbuilder_ami_prefix="built-by-boxbuilder"

# Change RVM defaults
export boxbuilder_rvm_version=ruby-1.9.2-p0
export boxbuilder_default_ruby=ruby-1.9.2-p0


# Export on commandline to override
# boxbuilderrc_download_url=http://github.com/copernicus/boxbuilder/raw/master/boxbuilderrc_download
