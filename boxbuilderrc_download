# Default values for building AMIs
export boxbuilder_ami_instancetype=m1.large
export boxbuilder_ami_prefix="built-by-boxbuilder"


# Change RVM defaults
export boxbuilder_rvm_version=1.9.2
export boxbuilder_default_ruby=1.9.2


# Change Chef defaults
export boxbuilder_chef_dir=/var/chef
export boxbuilder_chef_repos="git://github.com/copernicus/cookbooks.git git://github.com/copernicus/basebooks.git"
export boxbuilder_chef_json_path="$boxbuilder_chef_dir/basebooks/config/node_default.json"
export boxbuilder_chef_config_path="$boxbuilder_chef_dir/basebooks/config/solo_default.rb"


